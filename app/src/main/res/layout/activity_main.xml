<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.ubs.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_centerVertical="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/user_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_area"
        android:layout_toEndOf="@id/user_email"
        android:layout_toRightOf="@id/user_email"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/user_email"
        android:layout_alignBaseline="@id/user_email"
        android:layout_alignTop="@id/user_email"
        android:layout_alignLeft="@+id/pswd_area"
        android:layout_alignStart="@+id/pswd_area" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pswd"
        android:text="Password"
        android:layout_below="@id/user_email"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pswd_area"
        android:layout_toRightOf="@id/pswd"
        android:layout_toEndOf="@id/pswd"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_alignBottom="@id/pswd"
        android:layout_alignTop="@id/pswd"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:text="LOGIN"
        android:layout_below="@id/pswd"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:text="REGISTER"
        android:layout_below="@id/login"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

</RelativeLayout>
